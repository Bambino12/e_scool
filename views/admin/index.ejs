<%- include('../partials/header') %>
    <main class="main">
      <div class="table-contener"> 
        <table class="table table-striped">
          <h3>liste des univercite </h3>
          <thead class="thead-dark">
            <tr>
              <th>Nom</th>
              <th>UFR</th>
              <th>Nombre de cour</th>
              <th colspan="3">Action</th>
            </tr>
          </thead>
          <tbody>
            <% univercites.forEach(function(univercite){ %>
              <tr>
                <td><%= univercite.nom %></td>
                <td><%= univercite.ufr %></td>
                <td>28</td>
                <td class="bg-danger"><a href="/admin/delete/<%=univercite.id %>">suprime</a></td>
                <td class="bg-success"><a href="/admin/update/<%=univercite.id %>">modifie</a></td>
                <td class="bg-primary"><a href="/admin/detail/<%=univercite.id %>">details</a></td>
              </tr>
            <% }) %>
           
          </tbody>
        </table>
      </div>
        
    </main>
    <aside class="sidebar">
      <% if (locals.update){ %>
        <div>
          <h3>modifie l'univercit√©</h3>
          <form action="" method="post">
            <div>
              <label for="nom"> nom de l'univercite</label>
            <input type="text" name="nom" id="nom" value="<%= update.nom %>">
            </div>
            <div>
              <label for="urf">ufr </label>
              <input type="text" name="ufr" id="ufr" value="<%= update.ufr %>" >
            </div>
            <div>
              <input type="submit" value="submit">
            </div>
          </form>
        </div>
      
      <% } else { %>
        <div>
          <form action="" method="post">
            <div>
              <label for="nom"> nom de l'univercite</label>
            <input type="text" name="nom" id="nom">
            </div>
            <div>
              <label for="urf">ufr </label>
              <input type="text" name="ufr" id="ufr">
            </div>
            <div>
              <input type="submit" value="submit">
            </div>
          </form>
        </div>
      <%} %>
     
    </aside>
  <script src="/javascripts/jquery-3.5.1.min.js"></script>
  <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>